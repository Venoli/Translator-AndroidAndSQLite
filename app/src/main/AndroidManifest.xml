<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.translator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.TranslateAll"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name=".view.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name=".view.Translate"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".view.LanguageSubscription"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".view.EditPhrases"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".view.Listview" />
        <activity android:name=".view.DisplayPhrases"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".view.AddPhrases"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>